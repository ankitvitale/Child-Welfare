<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/image222"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_portrait_black_24dp"/>

           <TextView
               android:text="User Name"
               android:paddingLeft="10dp"
               android:id="@+id/name222"
               android:layout_toRightOf="@+id/image222"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               style="@style/TextAppearance.AppCompat.SearchResult.Title"/>

            <TextView
                android:text="Mobile No."
                android:id="@+id/mobile222"
                android:paddingLeft="10dp"
                android:layout_below="@+id/name222"
                android:layout_toRightOf="@+id/image222"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"/>

            <TextView
                android:id="@+id/location222"
                android:paddingLeft="10dp"
                android:text="Location"
                android:layout_toRightOf="@+id/image222"
                android:layout_below="@+id/mobile222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:maxLines="4"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>